datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  usuario_id   Int       @id @default(autoincrement())
  nome         String
  email        String    @unique
  telefone     String    @unique
  senha        String
  rua          String    
  num_casa     String
  bairro       String
  cep          String
  cpf          String?   @unique
  cnpj         String?   @unique
  role         UserRole  @default(user)
  central_user Central[]
  score_panel  Score[]
  agendamentos Agendamentos[]
}

model Score {
  id_score      Int      @id @default(autoincrement())
  qntd_residuos Int
  date_          DateTime
  email         String
  Usuario       User     @relation(fields: [email], references: [email])
}

model Agendamentos {
  id_agendamento Int @id @default(autoincrement())
  data_agendamento DateTime
  horario DateTime
  status String @default("Pendente")
  tipo_residuo String
  quantidade_residuo String
  usuario_id Int
  Usuario    User   @relation(fields: [usuario_id], references: [usuario_id])
}

model Central {
  id_central Int    @id @default(autoincrement())
  descricao  String
  usuario_id Int
  Usuario    User   @relation(fields: [usuario_id], references: [usuario_id])
}

model Noticias {
  noticia_id Int    @id @default(autoincrement())
  imagem     String
  manchete   String
  link_      String
}

enum UserRole {
  admin
  user
  enterprise
}
